{% extends 'base.html.twig' %}

{% block title %}Tables{% endblock %}

{% block body %}
    <div class="card-columns">
        {% for table in tables %}
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Столик № {{ table.number }}</h5>
                    <p>{{ table.user ? table.user.username : '' }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
