{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="create-user-button">
        <a class="btn btn-primary" href="{{ path('admin.user.create.view') }}">Создать</a>
    </div>

    <ul class="list-group users-list">
        {% for user in users %}
            <li class="list-group-item">
                {{ user.username }}
                <a href="{{ path('admin.user.edit.view', {userId: user.id}) }}">
                    <i class="far fa-edit users-list-edit-user"></i>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
